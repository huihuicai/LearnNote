<?xml version="1.0" encoding="utf-8"?>
<com.note.learn.view.PullScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_main_three" />

        <RelativeLayout
            android:id="@+id/rl_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@android:color/white"
            android:padding="10dp">

            <ImageView
                android:id="@+id/iv_photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_photo_default" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_photo"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称"
                    android:textColor="@color/color_black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="修改个人信息"
                    android:textColor="@color/color_gray"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_setting"
                style="@style/style_item_common">

                <ImageView
                    android:id="@+id/iv_setting"
                    style="@style/style_item_common_img"
                    android:src="@drawable/icon_setting" />

                <LinearLayout
                    style="@style/style_item_common_right"
                    android:layout_toRightOf="@id/iv_setting">

                    <TextView
                        style="@style/style_item_common_title"
                        android:text="设置" />

                    <TextView
                        style="@style/style_item_common_subtitle"
                        android:text="部分功能设置" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_divider" />

            <RelativeLayout
                android:id="@+id/rl_favorite"
                style="@style/style_item_common">

                <ImageView
                    android:id="@+id/iv_favorite"
                    style="@style/style_item_common_img"
                    android:src="@drawable/icon_favorite" />

                <LinearLayout
                    style="@style/style_item_common_right"
                    android:layout_toRightOf="@id/iv_favorite">

                    <TextView
                        style="@style/style_item_common_title"
                        android:text="收藏" />

                    <TextView
                        style="@style/style_item_common_subtitle"
                        android:text="记录收藏重点" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_divider" />

            <RelativeLayout
                android:id="@+id/rl_about"
                style="@style/style_item_common">

                <ImageView
                    android:id="@+id/iv_about"
                    style="@style/style_item_common_img"
                    android:src="@drawable/icon_about" />

                <LinearLayout
                    style="@style/style_item_common_right"
                    android:layout_toRightOf="@id/iv_about">

                    <TextView
                        style="@style/style_item_common_title"
                        android:text="关于" />

                    <TextView
                        style="@style/style_item_common_subtitle"
                        android:text="与APP相关" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</com.note.learn.view.PullScrollView>

